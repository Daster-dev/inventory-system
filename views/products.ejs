  });
});


function closePopout() {
  popout.style.display = 'none';
}









async function saveProduct() {
  const id = document.getElementById('popId').value;
  const updated = {
    name: document.getElementById('popName').value,
    category: document.getElementById('popCategory').value,
    priceIn: document.getElementById('popPriceIn').value,
    priceOut: document.getElementById('popPriceOut').value,
    qty: document.getElementById('popQty').value,
    expiryDate: document.getElementById('popExpiry').value
  };

  try {
    const res = await fetch(`/products/update/${id}`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(updated)
    });

    const data = await res.json();
    if (data.success) {
      alert('✅ تم تحديث المنتج بنجاح');
      location.reload();
    } else {
      alert('❌ فشل التحديث');
    }
  } catch (err) {
    console.error(err);
    alert('❌ خطأ في الاتصال بالسيرفر');
  }
}






</script>



